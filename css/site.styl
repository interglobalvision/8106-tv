  $margin-small = ($gutter)
  $margin-tiny = ($gutter / 2)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 13px
  $font-leading-basic = 1.35em
  $font-leading-wider = 1.5em
  $font-tracking-basic = 0.001em

  $border-width = 2px

  .container
    width: 100%
    padding: 0 $margin-small
  .col
    float: none
    margin-left: 0
    margin-right: 0
    width: 100%

  // TYPOGRAPHY

  body
    font-size: $font-size-basic
    line-height: $font-leading-basic
    letter-spacing: $font-tracking-basic

  h1
    font-size: 2.2em
    font-family: 'Century Gothic'

  h2
    font-size: 1.6em
    font-family: 'Century Gothic'

  h3
    font-size: 1.2em
    font-family: 'Century Gothic'

  .copy
    font-size: 1rem
    p, h1, h2, h3, h4, h5, h6
      margin-left: 0
      margin-right: 0
      margin-bottom: $margin-basic
    iframe
      margin: 0 auto $margin-basic auto
    img
      margin: 0 auto $margin-basic auto

  #featured-copy
    p, h1, h2, h3, h4, h5, h6
      margin: 0 0 $margin-basic 0

  .indent
    margin-left: ( 1 * $col ) + ( ( 1 - 1 ) * $gutter )

  .feed-category
    font-size: 1.6rem
    text-align: left
    margin-bottom: $margin-small

  .rotate-text
    writing-mode: unset
    transform: rotate(0deg)

  // STRUCTURE

  #main-content
    padding-top: $margin-tiny

  .hide-on-mobile
    display: none

  // HEADER

  #header-advert-space
    display: none

  #header
    margin-top: $margin-small
    margin-bottom: $margin-small
    .row
      display: flex
    .logo
      height: 2rem
      padding-right: $margin-basic

  // DRAWERS

  .header-drawer
    font-size: 1.1rem
    padding: $margin-small 0 $margin-basic 0
    margin-bottom: $margin-small

  #drawer-radio
    padding-bottom: $margin-small

  .social-icon
    svg
      width: $margin-basic
      height: $margin-basic

  // Ads
  .ad
    margin-bottom: $margin-tiny

  // SEARCH

  #search-field-holder
    width: 70%
    float: left

  #search-submit-holder
    width: 28%
    margin-left: 2%
    float: left

  #search-field, #search-submit
    height: 4rem
    .genericon
      font-size: 1.5rem

  // CATEGORIES

  #drawer-categorias-list
    li.cat-item
      padding: $margin-small $margin-tiny


  // HOME FEATURED POST

  #featured-post-container,
  #featured-post-title-holder,
  #featured-post-title,
  #featured-post-subtitle-holder,
  #featured-post-subtitle,
  #featured-post-image-holder
    max-height: initial
    min-height: auto

  #featured-post, #featured-single-header
    padding-bottom: $margin-basic
    margin-bottom: $margin-basic

  #featured-post-container
    display: block

  #featured-post-title-holder
    min-height: auto

  #featured-post-title
    font-size: 2rem

  #featured-post-subtitle-holder
    margin: 0 0 $margin-small 0

  #featured-post-subtitle
    font-size: 1.5rem

  #featured-post-image-holder
    margin: 0
    max-width: 100%

  #featured-post-image
    max-width: 100%


  // HOME POSTS FEED

  .attachment-index-post-thumb
    float: left
    width: 48%
    margin-right: 4%

  .attachment-index-post-thumb-portrait
    float: left
    width: 40%
    margin-right: 12%

  .ad
    float: none
    width: 100%
    text-align: center
    margin-bottom: $margin-large
    clearfix()

  .posts-feed
    margin-bottom: 0

  .feed-post
    width: 100%
    margin-bottom: $margin-large

  .feed-title
    font-size: 1.2rem

  .feed-subtitle
    display: none

  .see-more
    border-width: $border-width
    padding: $margin-basic 0


  // SMALL POSTS

  .small-post-title
    margin: $margin-tiny

  .small-post
    border-top: $border-width solid
    margin-bottom: $margin-small
    img
      float: left
      max-width: 48%
      margin-right: 4%
    h4
      float: left
      max-width: 48%


  // SEARCH

  #search-field, #search-submit
    padding: $margin-small


  // EVENTS

    // HOME

  #events
    .row
      margin-bottom: 0

  .home
    #events
      margin-top: $margin-large
    .feed-category
      margin-bottom: $margin-basic

  .event-item
    width: 100%
    margin-bottom: $margin-basic
    .s3
      width: 48%
      margin-right: 4%
      float: left
    .event-date
      width: 100%
      height: ( 3 * $col ) + ( ( 3 - 1 ) * $gutter )

  .event-info
    width: 48%
    float: left
    margin-top: 2%

  #more-events
    height: ( 3 * $col ) + ( ( 3 - 1 ) * $gutter )
    width: ( 3 * $col ) + ( ( 3 - 1 ) * $gutter )
    padding: 0 $margin-basic


  // PAGINATION

  #pagination
    margin-top: $margin-mid
    margin-bottom: $margin-mid
    .pagination-block
      display: block
      width: 100%
      padding: $margin-basic
      border-width: $border-width
      margin-bottom: $margin-small


  // SINGLE POST

  .custom-embed-with-ad
    margin-left: 0
    margin-right: 0
    .embed
      float: none
      width: 100%
      margin-right: 0
      margin-bottom: $margin-small
    .embed-ad
      float: none
      max-width: 100%

  #single-header
    margin-bottom: $margin-basic
    padding-bottom: $margin-small

  #single-ad-header
    display: none

  #single-title
    margin-top: $margin-small
    margin-bottom: $margin-tiny

  #single-subtitle
    margin-bottom: $margin-tiny

  #single-sidebar, #single-popular
    width: 100%
    float: none

  .single-sidebar-item
    margin-bottom: $margin-basic

  #more-music
    margin-bottom: $margin-large

  .single-more-post
    margin-bottom: $margin-mid
    clearfix()
    .wp-post-image, .feed-title
      float: left
      width: 48%
      margin-bottom: $margin-tiny
    .wp-post-image
      margin-right: 4%
    .feed-subtitle
      display: none


  // PAGE

  #page-header
    padding: $margin-mid 0
    margin-bottom: $margin-basic

  #page-content
    margin-bottom: $margin-basic


  // FOOTER

  #footer
    font-size: 1.1rem
    padding-top: $margin-mid
    padding-bottom: $margin-mid
    .logo
      width: 30%
      margin-bottom: $margin-basic

  #featured-social-widgets
    margin-top: $margin-basic
    margin-bottom: $margin-large

  // 404
  #not-found
    margin-bottom: $margin-large

  // GALLERY
  .gallery
    margin: $margin-basic 0

  .cycle-slide
    img
      margin: 0 auto $margin-tiny !important

  .cycle-prev
    svg
      left: $margin-tiny

  .cycle-next
    svg
      right: $margin-tiny

  // Ads
  div[id^='div-gpt-ad']
    margin: 0 auto
